<?xml version="1.0" encoding="utf-8"?>

<!-- First Layout - Before starting run -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/startLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/runStartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/journalBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp"
        android:background="@drawable/start_btn"
        android:text="@string/runStartBtnText"
        android:textColor="@color/Black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/journalBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/journal_btn"
        android:text="@string/journalBtnText"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:layout_marginBottom="3dp"/>

</RelativeLayout>